@model IEnumerable<Mawjoud2.DAL.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Product</strong>
                        <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus">Add New </a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Sr No</th>
                                    <th>Product Name</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                { int count = 1;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.ProductName</td>
                                    <td>
                                        @Html.ActionLink("Edit", "ProductEdit", new { productId = item.ProductId })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "ProductDelete", new { productId = item.ProductId })
                                    </td>
                                </tr>
                                }




                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
